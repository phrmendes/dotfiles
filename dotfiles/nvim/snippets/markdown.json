{
  "Block math": {
    "prefix": "bm",
    "body": ["$$", "${1:equation}", "$$", "$0"],
    "description": "Add block math"
  },
  "Inline math": {
    "prefix": "im",
    "body": ["$${1:equation}$$0"],
    "description": "Add inline math"
  },
  "Recipe": {
    "prefix": "rcp",
    "body": [
      "## ${1:title}",
      "",
      "### Ingredientes",
      "",
      "- $0",
      "",
      "### Modo de preparo",
      "",
      "1. "
    ],
    "description": "Basic structure for recipes"
  },
  "Date": {
    "prefix": "date",
    "body": ["$CURRENT_DATE/$CURRENT_MONTH/$CURRENT_YEAR"],
    "description": "Current date (DD/MM/YYYY)"
  }
}
